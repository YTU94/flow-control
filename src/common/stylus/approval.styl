@import '~common/stylus/variable'
.approvalItem
  width: 100%
  float: left
  .group
    width: 100%
    float: left
    color: $color-text-d
    .title
      padding: .3rem .4rem
      box-sizing: border-box
      font-size: $font-size-medium
      text-align: left
      .state
        float: right
        color: $color-text-red
    .content
      text-align left
      background: $color-background
      padding .4rem
      box-sizing: content-box
      .name 
        line-height 1.6
        color: $color-text-d
      .flow 
        color: $color-text-gray
    .tabs
      float: right
      background: #fff
      text-align right
      padding: .4rem 0
      // height: 1.6rem
      // line-height 1.6rem
      .tabs-item
        height: auto
        display: inline-block
        float: right
        padding: .1rem 0.4rem
        border-radius: .4rem
        color: $color-text-red
        border: 1px solid $color-text-red
        margin-right: .4rem
    .line
      float: left
      width: 100%
      height: .25rem
      background: $color-background